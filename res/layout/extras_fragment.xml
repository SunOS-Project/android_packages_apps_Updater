<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:extra_card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <org.nameless.updates.ExtraCardView
            android:id="@+id/local_update_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/extra_card_layout_margin"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone"
            app:cardBackgroundColor="@color/cardview_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:contentPaddingBottom="16dp"
            app:contentPaddingLeft="16dp"
            app:contentPaddingRight="16dp"
            app:contentPaddingTop="16dp"
            extra_card_view:image="@drawable/ic_update_icon"
            extra_card_view:summary="@string/local_update_summary"
            extra_card_view:title="@string/local_update_title" />

        <org.nameless.updates.ExtraCardView
            android:id="@+id/maintainer_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/extra_card_layout_margin"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone"
            app:cardBackgroundColor="@color/cardview_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:contentPaddingBottom="16dp"
            app:contentPaddingLeft="16dp"
            app:contentPaddingRight="16dp"
            app:contentPaddingTop="16dp"
            extra_card_view:image="@drawable/ic_maintainers_icon"
            extra_card_view:title="@string/maintainer_info_title" />

        <org.nameless.updates.ExtraCardView
            android:id="@+id/donate_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/extra_card_layout_margin"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone"
            app:cardBackgroundColor="@color/cardview_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:contentPaddingBottom="16dp"
            app:contentPaddingLeft="16dp"
            app:contentPaddingRight="16dp"
            app:contentPaddingTop="16dp"
            extra_card_view:image="@drawable/ic_donate_icon"
            extra_card_view:summary="@string/donate_info_summary"
            extra_card_view:title="@string/donate_info_title" />

        <org.nameless.updates.ExtraCardView
            android:id="@+id/group_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/extra_card_layout_margin"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone"
            app:cardBackgroundColor="@color/cardview_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:contentPaddingBottom="16dp"
            app:contentPaddingLeft="16dp"
            app:contentPaddingRight="16dp"
            app:contentPaddingTop="16dp"
            extra_card_view:image="@drawable/ic_group_icon"
            extra_card_view:summary="@string/group_info_summary"
            extra_card_view:title="@string/group_info_title" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>